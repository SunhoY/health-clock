{
  "name": "@health-clock/nest-backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@health-clock/nest-backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@health-clock/nest-backend:build:development"
          },
          "production": {
            "buildTarget": "@health-clock/nest-backend:build:production"
          }
        }
      },
      "dev": {
        "continuous": true,
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/nest-backend",
          "parallel": true,
          "commands": [
            "webpack-cli build --node-env=development --watch",
            "sh -c 'until [ -f dist/main.js ]; do sleep 0.2; done; node --watch dist/main.js'"
          ]
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "express": "^5.2.1"
  }
}
